repeat task.wait() until game:IsLoaded()
repeat task.wait() until game:GetService("Players").LocalPlayer

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local VirtualUser = game:GetService("VirtualUser")
local vim = game:GetService("VirtualInputManager")

-- üß† ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏´‡∏•‡∏±‡∏Å: ‡∏Å‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡πÇ‡∏î‡∏ô‡πÄ‡∏ï‡∏∞‡∏ï‡∏≠‡∏ô AFK
LocalPlayer.Idled:Connect(function()
    pcall(function()
        VirtualUser:Button2Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
        task.wait(1)
        VirtualUser:Button2Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
        print("[ANTI-AFK] Simulated activity to prevent kick.")
    end)
end)

-- üîÅ ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏™‡∏£‡∏¥‡∏°: ‡∏à‡∏≥‡∏•‡∏≠‡∏á‡∏Ñ‡∏•‡∏¥‡∏Å/‡πÅ‡∏ï‡∏∞‡∏ó‡∏∏‡∏Å 10 ‡∏ô‡∏≤‡∏ó‡∏µ (600 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ)
task.spawn(function()
    while task.wait(600) do
        local success = pcall(function()
            -- ‡∏•‡∏≠‡∏á‡πÉ‡∏ä‡πâ VirtualUser ‡∏Å‡πà‡∏≠‡∏ô
            VirtualUser:CaptureController()
            VirtualUser:ClickButton2(Vector2.new())
        end)

        -- ‡∏ñ‡πâ‡∏≤‡πÄ‡∏Å‡∏°‡∏ö‡∏•‡πá‡∏≠‡∏Å VirtualUser ‚Üí ‡πÉ‡∏ä‡πâ VirtualInputManager ‡πÅ‡∏ó‡∏ô
        if not success then
            pcall(function()
                vim:SendMouseButtonEvent(0, 0, 0, true, game, 0)
                task.wait(0.1)
                vim:SendMouseButtonEvent(0, 0, 0, false, game, 0)
            end)
        end

        print("[ANTI-AFK] Periodic touch simulated (10 min).")
